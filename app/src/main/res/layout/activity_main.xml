<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="172dp"
        android:text="Home"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/property"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="136dp"
        android:hint="Property Types"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/spinnerBedroom"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Bedroom"
        app:layout_constraintTop_toBottomOf="@+id/property"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="73dp" />

    <EditText
        android:id="@+id/datetime"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="136dp"
        android:hint="Date and Time"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerBedroom" />

    <EditText
        android:id="@+id/price"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="136dp"
        android:hint="Monthly Rent Price"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datetime" />


    <Spinner
        android:id="@+id/spinnerFurniture"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="75dp"
        />

    <EditText
        android:id="@+id/note"
        android:layout_width="264dp"
        android:layout_height="90dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="136dp"
        android:hint="Notes"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerFurniture" />

    <EditText
        android:id="@+id/reporter"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="136dp"
        android:hint="Reporter Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="159dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporter" />




</androidx.constraintlayout.widget.ConstraintLayout>